generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(employee)
  createdAt DateTime @default(now())
  tasks    EmployeeTask[]
}

enum Role {
  admin
  editor
  employee
}

model Project {
  id            Int       @id @default(autoincrement())
  titleAr       String
  titleEn       String
  descriptionAr String
  descriptionEn String
  locationAr    String
  locationEn    String
  type          String
  status        String
  areas         String
  mainImageUrl  String
  images        ProjectImage[]
  createdAt     DateTime @default(now())
}

model ProjectImage {
  id          Int    @id @default(autoincrement())
  imageUrl    String
  captionAr   String
  captionEn   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   Int
}

model Service {
  id            Int    @id @default(autoincrement())
  nameAr        String
  nameEn        String
  descriptionAr String
  descriptionEn String
  createdAt     DateTime @default(now())
}

model BlogPost {
  id        Int    @id @default(autoincrement())
  slug      String @unique
  titleAr   String
  titleEn   String
  contentAr String
  contentEn String
  image     String
  createdAt DateTime @default(now())
}

model ContactRequest {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phone       String
  requested   String
  message     String
  createdAt   DateTime @default(now())
}

model Settings {
  id               Int    @id @default(autoincrement())
  heroTitleAr      String
  heroTitleEn      String
  heroSubtitleAr   String
  heroSubtitleEn   String
  heroCtaTextAr    String
  heroCtaTextEn    String
  heroCtaLink      String
  heroImageUrl     String
  footerAr         String
  footerEn         String
  socials          Json
  updatedAt        DateTime @updatedAt
}

model EmployeeTask {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  status      String @default("pending")
  assignedTo  User   @relation(fields: [assignedToId], references: [id])
  assignedToId Int
  createdAt   DateTime @default(now())
}
